<Window x:Class="PCVerwaltung.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PCVerwaltung"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="350">

    <Grid>
        <TextBox x:Name="txbUsername"  HorizontalAlignment="Left" Height="23" Margin="105,103,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged"/>
        <Label Content="Benutzername" HorizontalAlignment="Left" Margin="105,71,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.054,0.148"/>
        <Label Content="Passwort" HorizontalAlignment="Left" Margin="105,129,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txbPassword" HorizontalAlignment="Left" Height="23" Margin="105,156,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged_1"/>
        <Button Content="sign in" HorizontalAlignment="Left" Margin="105,197,0,0" VerticalAlignment="Top" Width="120" Click="Button_Click_1"/>
        <TextBox x:Name="txbOutput"  HorizontalAlignment="Left" Height="23" Margin="66,242,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="214" TextChanged="TextBox_TextChanged_2"/>
    </Grid>
</Window>

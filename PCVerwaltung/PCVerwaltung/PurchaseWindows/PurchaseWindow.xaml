<Window x:Class="PCVerwaltung.PurchaseWindows.PurchaseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PCVerwaltung"
        mc:Ignorable="d"
        Title="PurchaseWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Purchase" VerticalAlignment="Top" HorizontalContentAlignment="Center"></Label>
        <Button x:Name="PurchButton" Content="Purchase HWKomponent" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="400" Height="375"
                Click="PurchButtonClick" Margin="0,0,0,19">
        </Button>
        <Button x:Name="LogoutButton" Content="Logout" VerticalAlignment="Bottom" Click="LogoutClick">
        </Button>
    </Grid>
</Window>
